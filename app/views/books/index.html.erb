<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>

  <% @books.each do |book| %>
  <tr>
     <td><%=link_to book.title book_path %></td>
     <td><%=link_to book.body book_path %></td>
     <td><%= link_to "Show", "/books/#{book.id}" %></td>
     <td><%= link_to "Edit", "/books/#{book.id}" %></td>
     <td> <%=link_to "Destroy", "/books/#{book.id}" %></td>
  </tr>
  <% end %>
</table>

<h2>New books</h2>
<%=form_with model: @book do |f| %>

  <h4>Title</h4>
  <%=f.text_field:title %>

  <h4>Body</h4>
  <%=f.text_area:body %>

  <br><%=f.submit 'Create Book' %></br>
<% end %>


